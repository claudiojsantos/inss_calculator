<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <% if current_page.prev %>
      <li class="page-item">
        <%= link_to raw("&laquo;"), url_for(page: current_page.prev), class: "page-link" %>
      </li>
    <% end %>
    <% each_page do |page| %>
      <% if page.left_outer? || page.right_outer? || page.inside_window? %>
        <li class="page-item <%= 'active' if page == current_page %>">
          <%= link_to page, url_for(page: page), class: "page-link" %>
        </li>
      <% elsif page.gap? %>
        <li class="page-item disabled"><span class="page-link">â€¦</span></li>
      <% end %>
    <% end %>
    <% if current_page.next %>
      <li class="page-item">
        <%= link_to raw("&raquo;"), url_for(page: current_page.next), class: "page-link" %>
      </li>
    <% end %>
  </ul>
</nav>
