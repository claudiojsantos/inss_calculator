<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <% if applicants.prev_page %>
      <li class="page-item">
        <%= link_to raw("&laquo;"), url_for(page: applicants.prev_page), class: "page-link" %>
      </li>
    <% end %>

    <% (1..applicants.total_pages).each do |page| %>
      <li class="page-item <%= 'active' if page == applicants.current_page %>">
        <%= link_to page, url_for(page: page), class: "page-link" %>
      </li>
    <% end %>

    <% if applicants.next_page %>
      <li class="page-item">
        <%= link_to raw("&raquo;"), url_for(page: applicants.next_page), class: "page-link" %>
      </li>
    <% end %>
  </ul>
</nav>
